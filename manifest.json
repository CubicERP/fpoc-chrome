{
  "manifest_version": 2,

  "name": "Fiscal Printer Chrome Application",
  "description": "This app publish local fiscal printers into a local network and let to webpages to interact with them.",
  "version": "1.0",

  "app": {
	  "background": {
		  "scripts": [
			  "test/test_001.js",
			  "test/test_002.js",
			  "src/async.js",
			  "src/bundle.js",
			  "src/oerp.js",
			  "src/epson_ar.js",
			  "src/tools.js",
			  "src/sevents.js",
			  "src/background.js" ]
	  }
  },

  "externally_connectable": {
     "matches": [
         "*://localhost:*/*",
         "*://serverhost:*/*"
     ]
  },

  "permissions": [
     "*://*/*",
     "storage",
     "usb",
     { "usbDevices": [
	     { "vendorId": 1208, "productId": 514 }
	     ] },
     { "socket": [
	     "tcp-connect",
	     "tcp-listen"
	     ] }
  ],

  "icons": { "16": "img/icon-16px.png", "128": "img/icon-128px.png" }
}
